<center>
<% if @game.current_turn == @game.player_1 %>
<h1>
<%= @game.player_1.name %> attacked <%= @game.player_2.name %>
</h1>
<%else%>
<h1>
<%= @game.player_2.name %> attacked <%= @game.player_1.name %>
<% end %>
</h1>

<h2>
<%= @game.player_1.name %>: <%= @game.player_1.hp %>HP
<%= @game.player_2.name %>: <%= @game.player_2.hp %>HP
</h2>

<form action="/switch-turns" method="post">
  <input type="submit" value="Switch-Turn">
</form>


</center>
